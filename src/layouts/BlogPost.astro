---
import MainLayout from './MainLayout.astro';
import { formatDate } from '../utils';

const { frontmatter } = Astro.props;
---

<MainLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="blog-post">
    <div class="container">
      <header>
        <h1>{frontmatter.title}</h1>
        <div class="metadata">
          <time datetime={frontmatter.pubDate.toString()}>
            {formatDate(frontmatter.pubDate)}
          </time>
          {frontmatter.author && <span> | {frontmatter.author}</span>}
        </div>
        {frontmatter.tags && (
          <div class="tags">
            {frontmatter.tags.map((tag: string) => (
              <a href={`/tags/${tag.toLowerCase()}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </header>
      <div class="content">
        <slot />
      </div>
    </div>
  </article>
</MainLayout>

<style>
  .blog-post {
    margin: 2rem 0;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  header {
    margin-bottom: 2rem;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  
  .metadata {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 1rem;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0;
  }
  
  .tag {
    background-color: #f1f1f1;
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    color: #333;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }
  
  .tag:hover {
    background-color: #e0e0e0;
  }
  
  .content {
    line-height: 1.7;
  }
  
  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }
  
  .content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }
  
  .content :global(blockquote) {
    border-left: 4px solid #e0e0e0;
    padding-left: 1rem;
    margin-left: 0;
    color: #666;
    font-style: italic;
  }
  
  .content :global(pre) {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
</style>
