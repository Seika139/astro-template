---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="portfolio-header">
  <h1>{title}</h1>
  {subtitle && <p class="subtitle">{subtitle}</p>}
</div>

<style>
  .portfolio-header {
    text-align: center;
    margin: 2rem 0 3rem 0;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #eee;
  }

  .portfolio-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #666;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }
</style>
